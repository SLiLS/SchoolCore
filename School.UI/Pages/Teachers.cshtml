@page 
@{
    ViewData["Title"] = "Teachers";
    Layout = "~/Pages/_Layout.cshtml";
}
  
    <script src="~/TeachersJQ.js"></script>



    <h1>Список учителей</h1>

    <div class="col-lg-12">
        <div id="boxes">
            <div id="dialog" class="window  center-block" style="margin-top:300px;"   >
                <h2>Учитель</h2><br /><br />
                <form name="createTeacherForm" id="createTeacherForm">
                    <input type="hidden" name="id" value="0" />

                    <input name="name" type="text" placeholder="Имя"><br /><br />
                    <input name="middleName" type="text" placeholder="Отчество"><br /><br />
                    <input name="surName" type="text" placeholder="Фамилия"><br /><br />
                    <input name="position" type="text" placeholder="Должность"><br /><br />
                    

                    <button type="submit" class="btn teachersend btn-sm btn-primary">Сохранить</button>
                    <a id="reset" class="btn btn-sm btn-primary">Сбросить</a>


                </form>
                <span><a href="#" class="close">Закрыть его</a></span>
            </div>
            <div id="mask"></div>
        </div>
        <a href="#dialog" name="modal" class=" btnteachercreate open-modal-btn btn btn-success">Добавить учителя</a><br /><br />

    </div>
    <table class="table table-condensed col-lg-6 table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>Должность</th>
                <th>Количество учеников</th>
                <th>Администрирование  </th>
            </tr>
        </thead>
        <tbody></tbody>

    </table>

